@model IEnumerable<VNTravel.Models.Room>

@{
    ViewBag.Title = "ManageRoom";
    Layout = "~/Views/Shared/_LayoutNV.cshtml";
}
<div class="main-panel" style="width:100%">
    <div class="content-wrapper">
        <div class="row">
            <div class="card card-rounded">
                <div class="card-body">
                    <div class="d-sm-flex justify-content-between align-items-start">
                        <div>
                            <h4 class="card-title card-title-dash">List Room</h4>
                            <p class="card-subtitle card-subtitle-dash">For Comfortable and convenient hotel</p>

                        </div>
                        @*<div>
                                <button onclick="location.href='@Url.Action("addroom", "room")';"
                                        class="btn btn-info btn-fw text-white mb-0 me-0" 
                                        type="button"> Add new room</button>
                            </div>*@
                    </div>
                    <form class="row" action="~/admin/quanlydoitac">
                        <i class="mb-2 icon-search"></i>
                        <div class="col-10">
                            <input type="text"
                                   class="form-control "
                                   id="search"
                                   name="search"
                                   placeholder="Search..."
                                   value="@ViewBag.Search" />
                        </div>
                        <div class="col-2">
                            <button class="nav-link btn btn-info btn-fw" type="submit">
                                Tìm Kiếm
                            </button>
                        </div>

                        <div id="defaultFormControlHelp" class="form-text">
                            <h4 class="text-danger p-1">@ViewBag.Error</h4>
                            Vui lòng nhậm thông tin chính xác
                        </div>
                    </form>

                    <div class="table-responsive  mt-1">
                        <table class="table select-table">
                            <thead>
                                <tr>
                                    <th class="col-1">
                                        @*<div class="form-check form-check-flat mt-0">
                                                <label class="form-check-label">
                                                    <input type="checkbox" class="form-check-input" aria-checked="false"><i class="input-helper"></i>
                                                </label>
                                            </div>*@
                                        Room ID
                                    </th>
                                    <th class="col-3">Company</th>
                                    <th class="col-3">Name and Price room</th>
                                    <th class="col-2">Status</th>
                                    <th class="col-2">...</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            Room_ID @item.Room_number
                                        </td>
                                        <td>
                                            <div class="d-flex ">
                                                <img src="" alt="logo">
                                                <div>
                                                    <h6>@item.Accompany.Accompany_name</h6>
                                                    <p>Company_ID @item.Accompany.Accompany_ID</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <h6>@item.Room_Type1.room_name</h6>
                                            <p>@item.Room_Type1.Price.price1 vnđ</p>
                                        </td>
                                        <td>
                                            @if (item.Room_Quantily >= 1)
                                            {

                                                <div class="badge badge-opacity-success">Còn phòng</div>
                                            }
                                            else
                                            {
                                                <div class="badge badge-opacity-warning">Hết phòng</div>
                                            }
                                        </td>
                                        <td>
                                            <button onclick="location.href='@Url.Action("", "")';" type="button" class="btn btn-outline-info btn-fw">Đặt Phòng</button>
                                            @if (item.Room_status == 0)
                                            {
                                                <button onclick="location.href='@Url.Action("RoomApproved", "Admin", new {@ID=item.Room_number})';" type="button" class="btn btn-info">Duyệt</button>
                                            }
                                            else if (item.Room_status == 1)
                                            {
                                                <button onclick="location.href='@Url.Action("RoomHidden", "Admin", new {@ID=item.Room_number})';" type="button" class="btn btn-secondary">Ẩn</button>
                                            }
                                            else if (item.Room_status == 2)
                                            {
                                                <button onclick="location.href='@Url.Action("RoomApproved", "Admin", new {@ID=item.Room_number})';" type="button" class="btn btn-warning">Hiện</button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Premium <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap admin template</a> from BootstrapDash.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Copyright © 2021. All rights reserved.</span>
        </div>
    </footer>
    <!-- partial -->
</div>