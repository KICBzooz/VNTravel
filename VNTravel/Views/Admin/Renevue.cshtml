@model IEnumerable<VNTravel.Models.Revenue>

@{
    ViewBag.Title = "Renevue";
    Layout = "~/Views/Shared/_LayoutNV.cshtml";


}
<style>
    .bgr {
        background-color: #F4F5F7;
        max-width:100%;
        height:100%;
        padding-right:700px;
    }
    .Renevue {
        display: flex;
        margin:50px 10px 5px 0px;
    }
    .h1{
        margin-left:50%;
    }
    .a{
        margin-right:20px;
    }
    .button {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        background-color: #4CAF50; /* Màu nền */
        color: white; /* Màu chữ */
        border-radius: 5px; /* Góc bo tròn */
        transition: background-color 0.3s;
        margin:44px 0px 0px 10px;
        border:none;
    }
        .button:hover {
            background-color: #45a049; /* Màu nền khi hover */
            color: white; /* Màu chữ */
        }
    input[type="text"],
    input[type="password"],
    textarea {
        width: 100%;
        padding: 10px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
        border-radius: 5px; /* Góc bo tròn */
    }

        input[type="text"]:focus,
        input[type="password"]:focus,
        textarea:focus {
            border: 2px solid #4CAF50; /* Màu viền khi focus */
        }

</style>
<div class="bgr">
    <h1 class="h1">Doanh Thu</h1>
    @using (Html.BeginForm("Renevue", "Admin", FormMethod.Post))
    {
        <div class="Renevue">
            <div class="Renevue a">
                <h4>Chọn Tháng: </h4>
                <select name="month">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                </select>
            </div>
            <div class="Renevue">
                <h4>Chọn Năm: </h4>
                <select name="year">
                    <option value="2023">2023</option>
                    <option value="2024">2024</option>
                    <option value="2025">2025</option>
                    <option value="2026">2026</option>
                    <option value="2027">2027</option>
                </select>
            </div>
            <div>
                <button class="button">Thống Kê</button>
            </div>

        </div>
        @Html.TextBox("Note",null, new { placeholder = "Nhập ghi chú..." })
    }

<table class="table">
    <tr>
        <th>
            Accompany Name
        </th>
        <th>
            Email
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.Accompany_ID.ToString() == Session["Accompany_ID"].ToString())
        {
            <tr>
                <td>
                    @ViewBag.AcName
                </td>
                <td>
                    @ViewBag.AcEmail
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                @*<td>
                    Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>*@
            </tr>
        }

    }

</table>
</div>
