@model IEnumerable<VNTravel.Models.Accompany>
@{
    ViewBag.Title = "QuanLyDoiTac";
    Layout = "~/Views/Shared/_LayoutNV.cshtml";
    VNTravel.Models.WebtraveldbEntities db = new VNTravel.Models.WebtraveldbEntities();


}

<div class="main-panel " style="width:100%">
    <div class="content-wrapper">
        <div class="row">
            <div class="card card-rounded">
                <div class="card-body">
                    <div class="d-sm-flex justify-content-between align-items-start">
                        <div>
                            <h4 class="card-title card-title-dash">List Contracter</h4>
                            <p class="card-subtitle card-subtitle-dash">The community develops together</p>

                        </div>
                        <div>
                            <a href="https://accounts.google.com/v3/signin/identifier?continue=https%3A%2F%2Fmail.google.com%2Fmail%2F&ifkv=AVQVeyxOLzQQHnpjHo0TX16uQMeez-JUtz-qR0-lzRuo69AWBPoEf_2GMLXP9IqXgHhK9VXBmTpzUA&rip=1&sacu=1&service=mail&flowName=GlifWebSignIn&flowEntry=ServiceLogin&dsh=S-1694248793%3A1698681388623675&theme=glif" class="notification btn btn-outline-primary btn-fw text-white mb-0 me-0">
                                <span>E-mail <i style="font-size:8px">Unread @ViewData["Greeting"]</i></span>
                                @{
                                    if (ViewData["Greeting"] != null)
                                    {
                                        int x = (int)ViewData["Greeting"];
                                        if (x > 1)
                                        {
                                            <span class="badge "><i class="mdi mdi-alert-circle mdi-24px"></i></span>
                                        }
                                        else
                                        {
                                            <span class="badge"></span>
                                        }
                                    }
                                }

                            </a>
                            <button onclick="location.href='@Url.Action("themdoitac", "admin")';" class="btn btn-info btn-fw text-white mb-0 me-0" type="button"><i class="mdi mdi-account-plus"></i> Add new member</button>
                        </div>
                    </div>
                    <form class="row" action="~/admin/quanlydoitac">
                        <i class="mb-2 icon-search"></i>
                        <div class="col-10">
                            <input type="text"
                                   class="form-control "
                                   id="search"
                                   name="search"
                                   placeholder="Search..."
                                   value="@ViewBag.Search" />
                        </div>
                        <div class="col-2">
                            <button class="nav-link btn btn-info btn-fw" type="submit">
                                Tìm Kiếm
                            </button>
                        </div>

                        <div id="defaultFormControlHelp" class="form-text">
                            <h4 class="text-danger p-1">@ViewBag.Error</h4>
                            Vui lòng nhậm thông tin chính xác
                        </div>
                    </form>

                    <div class="table-responsive  mt-1">
                        <table class="table select-table">
                            <thead>
                                <tr>
                                    <th class="col-2">
                                        @*<div class="form-check form-check-flat mt-0">
                                                <label class="form-check-label">
                                                    <input type="checkbox" class="form-check-input" aria-checked="false"><i class="input-helper"></i>
                                                </label>
                                            </div>*@
                                        Accompany ID
                                    </th>
                                    <th class="col-3">Company</th>
                                    <th class="col-3">Contact</th>
                                    @*<th class="col-2">Contract Time</th>*@
                                    <th class="col-2">...</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            Acompany_ID @item.Accompany_ID
                                        </td>
                                        <td>
                                            <div class="d-flex ">
                                                <img src="" alt="logo">
                                                <div>
                                                    <h6>@item.Accompany_name</h6>
                                                    <p>@item.Accompany_Type.accompany_name</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <h6>@item.Accompany_email</h6>
                                            <p>@item.Accompany_phone</p>
                                        </td>
                                        @*<td>
                                                <div>
                                                    <div class="d-flex justify-content-between align-items-center mb-1 max-width-progress-wrap">
                                                        <p class="text-success">79%</p>
                                                        <p>85/162</p>
                                                    </div>
                                                    <div class="progress progress-md">
                                                        <div class="progress-bar bg-success" role="progressbar" style="width: 85%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                                    </div>
                                                </div>
                                            </td>*@
                                        <td>
                                            <button onclick="location.href='@Url.Action("UpdateAccompany", "admin",new {@ID = item.Accompany_ID})';" type="button" class="btn btn-outline-info btn-fw">Info company</button>
                                            <button type="button" class="btn btn-danger">Xóa</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Premium <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap admin template</a> from BootstrapDash.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Copyright © 2021. All rights reserved.</span>
        </div>
    </footer>
    <!-- partial -->
</div>
<link href="~/CSS/vertical-layout-light/notifacation.css" rel="stylesheet" />